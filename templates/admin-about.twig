{% extends 'main.twig' %}

{% block title %}Admin - Update Content{% endblock %}


{% block heading %}Update About Us{% endblock %}

{% block admin %}
	
	<div class="row">
		
		<div class=".col-md-6 col-md-offset-3 for">

			<div class="panel panel-default">
				
				<div class="panel-heading">About Us</div>

				<div class="panel-body">
					
					<form action="{{ path_for('adminAbout.update') }}" method="post" autcomplete="off">
						
						<div class="form-group{{ errors.email ? ' has-error' : '' }}">
							
							<label for="about_img">About Us Img Url</label>

							<input type"text" name="about_img" id="about_img" class="form-control" >


						</div>
					
						<div class="form-group{{ errors.password ? ' has-error' : '' }}">
											
							<label for="about_para">About Us Paragraph</label>

							<input type="text" name="about_para" id="about_para" class="form-control">

						</div>

                        <div class="form-group{{ errors.password ? ' has-error' : '' }}">
											
							<label for="about_para1">About Us Paragraph 1</label>

							<input type="text" name="about_para1" id="about_para1" class="form-control">

						</div>

                        <div class="form-group{{ errors.password ? ' has-error' : '' }}">
											
							<label for="about_para2">About Us Paragraph 2</label>

							<input type="text" name="about_para2" id="about_para2" class="form-control">

						</div>

						<button type="submit" class="btn btn-default">Update Portfolio</button>

						{{ csrf.field | raw }}
						
					</form>

				</div>

			</div>

		</div>

    </div>

{% endblock %}
