{% extends 'main.twig' %}

{% block title %}Welcome Admin{% endblock %}


{% block heading %}Hello Toby!{% endblock %}

{% block content %}
	
	<div class="row">
		
		<div class=".col-md-6 col-md-offset-3">

			<div class="panel panel-default">
				
				<div class="panel-heading">Sign Up</div>

				<div class="panel-body">
					
					<form action="{{ path_for('auth.signup') }}" method="post" autcomplete="off">
						
						<div class="form-group{{ errors.email ? ' has-error' : '' }}">
							
							<label for="email">Email</label>

							<input type"email" name="email" id="email" placeholder="Example: you@domain.com" class="form-control">

							{% if errors.email %}
								
								<span class="help-block">{{ error.email | first }}</span>
							
							{% endif %}

						</div>
						<div class="form-group{{ errors.name ? ' has-error' : '' }}">
											
							<label for="name">Name</label>

							<input type"text" name="name" id="name" class="form-control">

							{% if errors.name %}
								
								<span class="help-block">{{ error.name | first }}</span>
							
							{% endif %}

						</div>
						<div class="form-group{{ errors.password ? ' has-error' : '' }}">
											
							<label for="password">Password</label>

							<input type"password" name="password" id="password" class="form-control">

							{% if errors.password %}
									
								<span class="help-block">{{ error.password | first }}</span>
							
							{% endif %}

						</div>

						<button type="submit" class="btn btn-default">Sign Up</button>
						
					</form>

				</div>

			</div>

		</div>

	</div>
	
	
{% endblock %}

