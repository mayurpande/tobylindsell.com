{% extends 'main.twig' %}

{% block title %}Welcome Admin{% endblock %}


{% block heading %}Change Password{% endblock %}

{% block admin %}
	
	<div class="row">
		
		<div class=".col-md-6 col-md-offset-3 for">

			<div class="panel panel-default">
				
				<div class="panel-heading">Change Password</div>

				<div class="panel-body">
					
					<form action="{{ path_for('auth.password.change') }}" method="post" autcomplete="off">
						
					
						<div class="form-group{{ errors.password ? ' has-error' : '' }}">
											
							<label for="password">Password</label>

							<input type="password" name="password" id="password" class="form-control">

							{% if errors.password %}
									
								<span class="help-block">{{ errors.password | first }}</span>
							
							{% endif %}

						</div>

						<button type="submit" class="btn btn-default">Change Password</button>

						{{ csrf.field | raw }}
						
					</form>

				</div>

			</div>

		</div>

	</div>
	
	
{% endblock %}

