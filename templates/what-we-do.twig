{% extends 'main.twig' %}
{% set active_page = 'what' %}

{% block title %}What We Do{% endblock %}


{% block heading %}What We Do{% endblock %}

{% block content %}
	
	<div class="news-image">
		<img src="{{ whatPage.what_img  }}" alt="What We Do Image" />
	</div>
	<div class="verticalLine"></div>

	<div class="para">
		{% for i in info %}	
			<div class="what-info">
				<h2>{{ i.heading }}</h2>
				<p>{{ i.para1 }}</p>
				<p>{{ i.para2 }}</p>

					{% if i.sub_heading %}			
						<h3>{{ i.sub_heading }}</h3>
						<p>{{ i.sub_para }}</p>
					{% endif %}
		
					{% if i.sub_heading2 %}	
						<h3>{{ i.sub_heading2 }}</h3>
						<p>{{ i.sub_para2 }}</p>
					{% endif %}
			</div>
		{% endfor %}
		
	</div>


	<div class="horizontalLine"></div>
	
{% endblock %}

